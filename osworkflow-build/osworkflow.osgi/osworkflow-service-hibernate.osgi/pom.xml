                                        org.hibernate.id.insert,org.hibernate.impl,org.hibernate.intercept,org.hibernate.intercept.cglib,org.hibernate.intercept.javassist,org.hibernate.jdbc,
                                        org.hibernate.jdbc.util,org.hibernate.loader,org.hibernate.loader.collection,org.hibernate.loader.criteria,org.hibernate.loader.custom,
                                        org.hibernate.loader.custom.sql,org.hibernate.loader.entity,org.hibernate.loader.hql,org.hibernate.lob,org.hibernate.mapping,org.hibernate.metadata,
