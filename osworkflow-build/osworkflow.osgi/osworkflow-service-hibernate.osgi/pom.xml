                                        org.hibernate.proxy,org.hibernate.proxy.dom4j,org.hibernate.proxy.map,org.hibernate.proxy.pojo,org.hibernate.proxy.pojo.cglib,org.hibernate.proxy.pojo.javassist,
                                        org.hibernate.secure,org.hibernate.sql,org.hibernate.sql.ordering.antlr,org.hibernate.stat,org.hibernate.tool.hbm2ddl,org.hibernate.tool.instrument,
